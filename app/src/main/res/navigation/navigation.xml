<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashScreenFragment">

    <fragment
        android:id="@+id/splashScreenFragment"
        android:name="com.totallytim.randomreminders.ui.splashscreen.SplashScreenFragment"
        android:label="splash_screen"
        tools:layout="@layout/splash_screen_fragment" >
        <action
            android:id="@+id/action_splashScreenFragment_to_mainFragment"
            app:destination="@id/mainFragment"
            app:popUpToInclusive="false" />
    </fragment>
    <fragment
        android:id="@+id/newReminderFragment"
        android:name="com.totallytim.randomreminders.ui.newreminder.NewReminderFragment"
        android:label="NewReminderFragment"
        tools:layout="@layout/new_reminder_fragment" >
        <action
            android:id="@+id/action_newReminderFragment_to_mainFragment"
            app:destination="@id/mainFragment"
            app:popUpToInclusive="false" />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.totallytim.randomreminders.ui.settings.SettingsFragment"
        android:label="SettingsFragment"
        tools:layout="@layout/settings_fragment" >
        <action
            android:id="@+id/action_settingsFragment_to_mainFragment"
            app:destination="@id/mainFragment"
            app:popUpToInclusive="false" />
        <argument android:name="settings"
            app:argType="string[]" />
    </fragment>
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.totallytim.randomreminders.ui.main.MainFragment"
        android:label="MainFragment"
        tools:layout="@layout/main_fragment" >
        <action
            android:id="@+id/action_mainFragment_to_settingsFragment"
            app:destination="@id/settingsFragment"
            app:popUpToInclusive="false" />
        <action
            android:id="@+id/action_mainFragment_to_newReminderFragment"
            app:destination="@id/newReminderFragment"
            app:popUpToInclusive="false" />
        <argument android:name="settings"
            app:argType="string[]" />
        <argument android:name="reminders"
            app:argType="string[]" />
    </fragment>
</navigation>
